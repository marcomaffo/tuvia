  "license": "ISC",
  "bugs": {
    "url": "https://github.com/marcomaffo/tuvia/issues"
  },
  "homepage": "https://github.com/marcomaffo/tuvia#readme",
  "dependencies": {
    "requirejs": "^2.3.6",
    "typescript": "^4.5.4"
  }
}
